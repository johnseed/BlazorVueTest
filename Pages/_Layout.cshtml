@using Microsoft.AspNetCore.Components.Web
@namespace BlazorVueTest.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <base href="~/" />
  <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
  <link href="css/site.css" rel="stylesheet" />
  <link href="BlazorVueTest.styles.css" rel="stylesheet" />
  <component type="typeof(HeadOutlet)" render-mode="ServerPrerendered" />
</head>

<body>
  <h1 id="h1"></h1>
  @RenderBody()

  <div id="blazor-error-ui">
    <environment include="Staging,Production">
      An error has occurred. This application may no longer respond until reloaded.
    </environment>
    <environment include="Development">
      An unhandled exception has occurred. See browser dev tools for details.
    </environment>
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
  </div>

  <script src="_framework/blazor.server.js"></script>

  <script>
    window.redBlazor = (msg) => {
      @* window.parent.document.body.style.backgroundColor = 'red' *@
      window.parent.msg = msg
      console.log(msg)
      document.getElementById('h1').innerText = msg
      return msg + '111';
    };
    window.changeProgress = (progress) => {
      window.parent.vueIndex.progress = progress
    };
    window.interpProgress = (interp, progress) => {
      window.parent.vueIndex.progress =  progress
      window.parent.console.log(progress, interp)
    };
    window.parent.DotNet = DotNet;
  </script>
</body>

</html>
